<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>Controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/UserRegister</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>

    </servlet-mapping>
    <servlet>
        <servlet-name>AddTodo</servlet-name>
        <servlet-class>Controller.TodoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowTodo</servlet-name>
        <servlet-class>Controller.TodoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowTodo</servlet-name>
        <url-pattern>/ShowTodo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTodo</servlet-name>
        <url-pattern>/AddTodo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteTodo</servlet-name>
        <servlet-class>Controller.DeleteTodoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTodo</servlet-name>
        <url-pattern>/DeleteTodo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTodo</servlet-name>
        <url-pattern>/DeleteAllTodo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateTodo</servlet-name>
        <servlet-class>Controller.UpdateTodoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateTodo</servlet-name>
        <url-pattern>/UpdateTodo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ForgotPassword</servlet-name>
        <servlet-class>Controller.ForgetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPassword</servlet-name>
        <url-pattern>/ForgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPassword</servlet-name>
        <url-pattern>/EmailCode</url-pattern>
        <!--ECFP=Email Code Forgot Password-->
    </servlet-mapping>
    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <servlet-class>Controller.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/ResetPassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>Controller.EditUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/EditUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>isDone</servlet-name>
        <servlet-class>Controller.IsDoneTodoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>isDone</servlet-name>
        <url-pattern>/IsDone</url-pattern>
    </servlet-mapping>
</web-app>
